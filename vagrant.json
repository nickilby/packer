{
    "builders": [
        {
            "communicator": "ssh",
            "source_path": "ubuntu/bionic64",
            "provider": "virtualbox",
            "add_force": true,
            "type": "vagrant"
        },
        {
            "type": "docker",
            "image": "18.04",
            "commit": true
        }
    ],
    "provisioners": [
        {
            "inline": [
                "echo 'Packer Build -- Complete'"
            ],
            "type": "shell"
        },
        {
            "inline": [
                "apt-get update && apt-get -y install sudo && sudo apt-get --assume-yes install php7.2-cli"
            ],
            "type": "shell"
        }
    ],
    "post-processors": [
        {
            "type": "vagrant-cloud",
            "box_tag": "joejcollins/test",
            "access_token": "{{user `vagrant-token`}}",
            "version": "0.0.1"
        }
    ]
}